task :clean_derived do
    sh "rm -rf WebCore/DerivedSources"
    sh "rm -rf JavaScriptCore/DerivedSources"
end

task :clean do
    sh "rm -rf #{install_dir}"
end

task :dist_clean => [:clean, :clean_derived]

task :default => [ 'jsc', 'libhlwk.so' ]
